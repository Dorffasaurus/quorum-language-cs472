use Libraries.Compute.Statistics.DataFrame

class BayesianModel
    Object probabilities
    Object likelihoods
    Decimal evidence
    Dataframe values

    action Initialize(Object initialProbabilities, Object initialLikelihoods, Decimal initialEvidence)
        probabilities = initialProbabilities
        likelihoods = initialLikelihoods
        evidence = initialEvidence
    end

    // Getter methods for accessing the model parameters
    action getProbabilities() returns Object
        return probabilities
    end

    action getLikelihoods() returns Object
        return likelihoods
    end

    action getEvidence() returns Decimal
        return evidence
    end
    action getValues() returns Dataframe
        return values
    end
    // Setter methods for updating the model parameters
    action setProbabilities(Object newProbabilities)
        probabilities = newProbabilities
    end

    action setLikelihoods(Object newLikelihoods)
        likelihoods = newLikelihoods
    end

    action setEvidence(Decimal newEvidence)
        evidence = newEvidence
    end
    action setValues(Dataframe inputValues)

    end
    // Function to load values from a CSV file
    action loadModelFromCSV(String filePath)
        Dataframe inputValues 
        inputValues:Load(filePath)
        setValues(inputValues)
        
    end

    // Function to export the model parameters to a CSV file
    action saveModelToCSV(String filePath)
        Dataframe currentValues = getValues()
        currentValues:Save(filepath)
    end
end
