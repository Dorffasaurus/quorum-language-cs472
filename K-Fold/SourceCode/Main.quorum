use Libraries.Compute.Statistics.DataFrame
use Libraries.Containers.Array
use Libraries.Containers.List

action Main
    DataFrame frame
    frame:Load("Iris.csv")

    // List to hold all folds
    List<DataFrame> folds

    // Need to figure out even k-folds
    k = 5.0     // For now a hardcored var
    seed = 0    // will be random later, set value for testing
    n = 0.0  
    n = 1/k
    i = 0
    repeat while i < k
        // Add all columns
        j = 0
        repeat while j < frame:GetSize()
            frame:AddSelectedColumn(j)
            j = j + 1
        end
        
        //Split Dataframe
        Array<DataFrame> frames = frame:SplitSelectedColumnsRandomlyByRows(n,seed)
        folds:Add(frames:Get(0))
        frame = frames:Get(1)   // Take the remainder for next loop interation
        i = i + 1
    end

    // Output
    i = 0
    repeat while i < k
        output i
        output folds:Get(i):ToText()
        i = i + 1
    end
end